@using Document_Manager.Web.Models.AuthViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    /* --- MODERN AUTH DESIGN --- */
    :root {
        --auth-primary: #4e73df;
        --auth-bg: #f8f9fc;
        --auth-shadow: rgba(0, 0, 0, 0.08);
    }

    .auth-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        background-color: var(--auth-bg);
    }

    .auth-glass-card {
        background: #ffffff;
        width: 100%;
        max-width: 800px; /* Aquí controlas el ancho del diseño */
        padding: 60px;
        border-radius: 24px;
        box-shadow: 0 20px 40px var(--auth-shadow);
        border: 1px solid rgba(255,255,255,0.8);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .brand-icon {
        width: 65px;
        height: 65px;
        background: var(--auth-primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin: 0 auto 20px;
        box-shadow: 0 10px 20px rgba(78, 115, 223, 0.3);
    }

    .auth-header h1 {
        font-size: 2.2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 8px;
    }

    .auth-header p {
        color: #888;
        font-size: 1.1rem;
    }

    /* Inputs Modernos */
    .input-group-modern {
        position: relative;
        display: flex;
        align-items: center;
        background: #fdfdfd;
        border: 2px solid #eee;
        border-radius: 12px;
        padding: 12px 20px;
        transition: all 0.3s;
    }

        .input-group-modern:focus-within {
            border-color: var(--auth-primary);
            box-shadow: 0 0 0 4px rgba(78, 115, 223, 0.1);
        }

        .input-group-modern i {
            color: #aaa;
            margin-right: 15px;
            font-size: 1.2rem;
        }

        .input-group-modern input {
            border: none;
            outline: none;
            background: transparent;
            width: 100%;
            font-size: 1rem;
            color: #444;
        }

    /* Opciones y Checkbox */
    .auth-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.95rem;
    }

    .forgot-pass {
        color: var(--auth-primary);
        text-decoration: none;
        font-weight: 500;
    }

    /* Botón Principal */
    .btn-auth-submit {
        width: 100%;
        background: var(--auth-primary);
        color: white;
        border: none;
        padding: 16px;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        margin-top: 30px;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

        .btn-auth-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(78, 115, 223, 0.4);
            background: #3e63d2;
        }

    /* Footer */
    .auth-footer {
        text-align: center;
        margin-top: 35px;
    }

        .auth-footer p {
            color: #666;
        }

        .auth-footer a {
            color: var(--auth-primary);
            font-weight: 700;
            text-decoration: none;
        }

    .back-home {
        display: inline-block;
        margin-top: 20px;
        font-size: 0.9rem;
        color: #aaa !important;
    }
</style>

<div class="auth-wrapper">
    <div class="auth-glass-card">
        <div class="auth-header">
            <div class="brand-icon">
                <i class="bi bi-person-badge-fill"></i>
            </div>
            <h1>Bienvenido</h1>
            <p>Ingresa tus credenciales para continuar</p>
        </div>

        <form asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center"></div>

            <div class="input-group-modern">
                <i class="bi bi-envelope"></i>
                <input asp-for="Email" placeholder="Correo Electrónico" />
            </div>
            <span asp-validation-for="Email" class="text-danger small ms-2"></span>

            <div class="input-group-modern mt-3">
                <i class="bi bi-key"></i>
                <input asp-for="Password" type="password" placeholder="Contraseña" />
            </div>
            <span asp-validation-for="Password" class="text-danger small ms-2"></span>

            <div class="auth-options mt-4">
                <label class="checkbox-container">
                    <input asp-for="RememberMe" />
                    <span class="checkmark"></span>
                    Recuérdame
                </label>
                <a asp-controller="Auth" asp-action="VerifyEmail" class="forgot-pass">¿Olvidaste tu clave?</a>
            </div>

            <button type="submit" class="btn-auth-submit">
                Ingresar <i class="bi bi-arrow-right"></i>
            </button>

            <div class="auth-footer">
                <p>¿No tienes cuenta? <a asp-controller="Auth" asp-action="Register">Regístrate</a></p>
                <a asp-controller="Home" asp-action="Index" class="back-home">
                    <i class="bi bi-house"></i> Volver al inicio
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}



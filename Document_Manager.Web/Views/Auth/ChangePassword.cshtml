@using Document_Manager.Web.Models.AuthViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<style>
    /* --- MODERN AUTH DESIGN --- */
    :root {
        --auth-primary: #4e73df;
        --auth-bg: #f8f9fc;
        --auth-shadow: rgba(0, 0, 0, 0.08);
    }

    .auth-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        background-color: var(--auth-bg);
    }

    .auth-glass-card {
        background: #ffffff;
        width: 100%;
        max-width: 800px; /* Aquí controlas el ancho del diseño */
        padding: 60px;
        border-radius: 24px;
        box-shadow: 0 20px 40px var(--auth-shadow);
        border: 1px solid rgba(255,255,255,0.8);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .brand-icon {
        width: 65px;
        height: 65px;
        background: var(--auth-primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin: 0 auto 20px;
        box-shadow: 0 10px 20px rgba(78, 115, 223, 0.3);
    }

    .auth-header h1 {
        font-size: 2.2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 8px;
    }

    .auth-header p {
        color: #888;
        font-size: 1.1rem;
    }

    /* Inputs Modernos */
    .input-group-modern {
        position: relative;
        display: flex;
        align-items: center;
        background: #fdfdfd;
        border: 2px solid #eee;
        border-radius: 12px;
        padding: 12px 20px;
        transition: all 0.3s;
    }

        .input-group-modern:focus-within {
            border-color: var(--auth-primary);
            box-shadow: 0 0 0 4px rgba(78, 115, 223, 0.1);
        }

        .input-group-modern i {
            color: #aaa;
            margin-right: 15px;
            font-size: 1.2rem;
        }

        .input-group-modern input {
            border: none;
            outline: none;
            background: transparent;
            width: 100%;
            font-size: 1rem;
            color: #444;
        }

    /* Opciones y Checkbox */
    .auth-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.95rem;
    }

    .forgot-pass {
        color: var(--auth-primary);
        text-decoration: none;
        font-weight: 500;
    }

    /* Botón Principal */
    .btn-auth-submit {
        width: 100%;
        background: var(--auth-primary);
        color: white;
        border: none;
        padding: 16px;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        margin-top: 30px;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

        .btn-auth-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(78, 115, 223, 0.4);
            background: #3e63d2;
        }

    /* Footer */
    .auth-footer {
        text-align: center;
        margin-top: 35px;
    }

        .auth-footer p {
            color: #666;
        }

        .auth-footer a {
            color: var(--auth-primary);
            font-weight: 700;
            text-decoration: none;
        }

    .back-home {
        display: inline-block;
        margin-top: 20px;
        font-size: 0.9rem;
        color: #aaa !important;
    }
</style>

<div class="auth-wrapper">
    <div class="auth-glass-card">
        <div class="auth-header">
            <div class="brand-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h1>Seguridad de Cuenta</h1>
            <p>Actualiza tu contraseña para mantener tu cuenta protegida</p>
        </div>

        <form asp-action="ChangePassword" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center"></div>

            <div class="mb-4">
                <label class="form-label text-muted small fw-bold ms-2">CUENTA ACTIVA</label>
                <div class="input-group-modern bg-light">
                    <i class="bi bi-envelope-at text-muted"></i>
                    <input asp-for="Email" class="text-muted" readonly style="cursor: not-allowed;" />
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="NewPassword" class="form-label text-muted small fw-bold ms-2">NUEVA CONTRASEÑA</label>
                <div class="input-group-modern">
                    <i class="bi bi-key-fill"></i>
                    <input asp-for="NewPassword" type="password" placeholder="Ingresa tu nueva clave" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger small ms-2"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmNewPassword" class="form-label text-muted small fw-bold ms-2">CONFIRMAR CONTRASEÑA</label>
                <div class="input-group-modern">
                    <i class="bi bi-shield-check"></i>
                    <input asp-for="ConfirmNewPassword" type="password" placeholder="Repite la nueva clave" />
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger small ms-2"></span>
            </div>

            <button type="submit" class="btn-auth-submit mt-2">
                Actualizar Contraseña <i class="bi bi-arrow-repeat"></i>
            </button>

            <div class="auth-footer">
                <a asp-controller="Auth" asp-action="Login" class="back-home">
                    <i class="bi bi-arrow-left"></i> Cancelar y volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
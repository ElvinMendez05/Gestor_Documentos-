@using Document_Manager.Web.Models.AuthViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "_AuthLayout";
}

<style>
    :root {
        --auth-primary: #4e73df;
        --auth-primary-dark: #3e63d2;
        --auth-bg: #f4f6fb;
        --auth-shadow: rgba(0, 0, 0, 0.06);
        --auth-text: #2c2c2c;
    }

    body {
        background: var(--auth-bg);
    }

    .auth-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 30px 20px;
    }

    .auth-card {
        background: #ffffff;
        width: 100%;
        max-width: 480px;
        padding: 45px 40px;
        border-radius: 18px;
        box-shadow: 0 15px 35px var(--auth-shadow);
        transition: 0.3s ease;
    }

        .auth-card:hover {
            transform: translateY(-3px);
        }

    .auth-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .brand-icon {
        width: 60px;
        height: 60px;
        background: var(--auth-primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        margin: 0 auto 18px;
        box-shadow: 0 8px 20px rgba(78,115,223,0.25);
    }

    .auth-header h1 {
        font-size: 1.7rem;
        font-weight: 700;
        color: var(--auth-text);
        margin-bottom: 6px;
    }

    .auth-header p {
        font-size: 0.95rem;
        color: #777;
        margin: 0;
    }

    /* Inputs */
    .input-modern {
        display: flex;
        align-items: center;
        background: #fafbff;
        border: 2px solid #e9ecf5;
        border-radius: 12px;
        padding: 12px 16px;
        transition: 0.3s;
    }

        .input-modern:focus-within {
            border-color: var(--auth-primary);
            box-shadow: 0 0 0 4px rgba(78,115,223,0.08);
            background: #fff;
        }

        .input-modern i {
            color: #9aa3b2;
            margin-right: 12px;
            font-size: 1rem;
        }

        .input-modern input {
            border: none;
            background: transparent;
            outline: none;
            width: 100%;
            font-size: 0.95rem;
            color: #444;
        }

            .input-modern input[readonly] {
                cursor: not-allowed;
                color: #888;
            }

    /* Password strength indicator */
    .password-hint {
        font-size: 0.8rem;
        color: #999;
        margin-top: 6px;
        margin-left: 4px;
    }

    /* Button */
    .btn-auth {
        width: 100%;
        background: var(--auth-primary);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        margin-top: 25px;
        transition: 0.25s ease;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
    }

        .btn-auth:hover {
            background: var(--auth-primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(78,115,223,0.3);
        }

    .auth-footer {
        text-align: center;
        margin-top: 25px;
    }

        .auth-footer a {
            font-size: 0.85rem;
            color: #999;
            text-decoration: none;
            transition: 0.2s;
        }

            .auth-footer a:hover {
                color: var(--auth-primary);
            }

</style>

<div class="auth-wrapper">
    <div class="auth-card">

        <div class="auth-header">
            <div class="brand-icon">
                <i class="bi bi-shield-lock-fill"></i>
            </div>
            <h1>Cambiar Contraseña</h1>
            <p>Mantén tu cuenta protegida actualizando tu clave</p>
        </div>

        <form asp-action="ChangePassword" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger small text-center mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <div class="input-modern">
                    <i class="bi bi-envelope-at"></i>
                    <input asp-for="Email" readonly />
                </div>
            </div>

            <!-- Nueva contraseña -->
            <div class="mb-3">
                <div class="input-modern">
                    <i class="bi bi-key-fill"></i>
                    <input asp-for="NewPassword" type="password" placeholder="Nueva contraseña" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger small ms-1"></span>
                <div class="password-hint">
                    Usa mínimo 8 caracteres, mayúsculas y números.
                </div>
            </div>

            <!-- Confirmar contraseña -->
            <div class="mb-3">
                <div class="input-modern">
                    <i class="bi bi-shield-check"></i>
                    <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirmar contraseña" />
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger small ms-1"></span>
            </div>

            <button type="submit" class="btn-auth">
                Actualizar <i class="bi bi-arrow-repeat"></i>
            </button>

            <div class="auth-footer">
                <a asp-controller="Auth" asp-action="Login">
                    <i class="bi bi-arrow-left"></i> Volver al Login
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

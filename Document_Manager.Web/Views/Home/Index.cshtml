@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --primary: #1D4ED8;
        --primary-dark: #1E40AF;
        --accent: #2563EB;
        --bg: #f4f8ff;
        --glass: rgba(255,255,255,0.70);
        --border: rgba(255,255,255,0.35);
        --shadow-soft: 0 15px 40px rgba(0,0,0,0.08);
        --shadow-hover: 0 25px 60px rgba(29,78,216,0.25);
    }

    body {
        background: radial-gradient(circle at top, #eaf2ff, var(--bg));
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    }

    .fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* --- HERO --- */
    .hero {
        background: linear-gradient(135deg, var(--primary), var(--accent));
        border-radius: 32px;
        padding: 60px 80px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-soft);
    }

        .hero::before {
            content: "";
            position: absolute;
            width: 600px;
            height: 600px;
            background: rgba(255,255,255,0.08);
            border-radius: 50%;
            top: -200px;
            right: -200px;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: 800;
            letter-spacing: -1px;
        }

    .btn-hero {
        background: white;
        color: var(--primary);
        border-radius: 14px;
        padding: 12px 28px;
        font-weight: 600;
        transition: all .3s ease;
        box-shadow: 0 10px 25px rgba(0,0,0,.1);
        text-decoration: none;
    }

        .btn-hero:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-hover);
            background: #f1f5ff;
            color: var(--primary-dark);
        }

    .btn-glass {
        border: 2px solid rgba(255,255,255,0.7);
        backdrop-filter: blur(6px);
        border-radius: 14px;
        padding: 12px 28px;
        color: white;
        transition: .3s;
        text-decoration: none;
        font-weight: 500;
    }

        .btn-glass:hover {
            background: rgba(255,255,255,0.15);
            color: white;
        }

    /* --- FEATURE CARDS --- */
    .feature-card {
        border-radius: 24px;
        padding: 30px;
        background: white;
        box-shadow: var(--shadow-soft);
        transition: all .3s ease;
        height: 100%;
        border: 1px solid rgba(0,0,0,0.02);
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-hover);
        }

    .feature-icon {
        font-size: 1.8rem;
        background: #eff6ff;
        color: var(--primary);
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    /* --- DOCUMENT CARDS (Modern Grid) --- */
    .doc-card {
        background: white;
        border-radius: 20px;
        padding: 20px;
        border: 1px solid #eef2f8;
        transition: all 0.3s ease;
        position: relative;
    }

        .doc-card:hover {
            border-color: var(--accent);
            box-shadow: var(--shadow-soft);
        }

    .doc-icon {
        width: 50px;
        height: 50px;
        background: var(--primary);
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .doc-title {
        font-weight: 700;
        font-size: 1rem;
        margin-bottom: 5px;
        color: #1f2937;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .doc-info {
        font-size: 0.85rem;
        color: #6b7280;
    }

    .doc-actions {
        display: flex;
        gap: 8px;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #f3f4f6;
    }

    .btn-action {
        flex: 1;
        padding: 6px;
        border-radius: 8px;
        font-size: 0.85rem;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
    }

    .btn-view {
        background: #eff6ff;
        color: var(--primary);
    }

        .btn-view:hover {
            background: var(--primary);
            color: white;
        }

    .section-title {
        font-weight: 800;
        font-size: 1.5rem;
        margin: 40px 0 20px 0;
        color: #111827;
        display: flex;
        align-items: center;
        gap: 10px;
    }
</style>

<div class="container my-5 fade-in">

    <div class="hero mb-5">
        <h1>Document Manager</h1>
        <p class="mt-3">
            Gestiona tus documentos PDF de forma segura, rápida y organizada <br/>
            desde un solo lugar con una experiencia moderna y profesional.
        </p>

        <div class="d-flex gap-3 mt-4 flex-wrap">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Documents" asp-action="Index" class="btn btn-hero">
                    <i class="bi bi-cloud-arrow-up-fill me-2"></i> Subir documento
                </a>
                <a asp-controller="Documents" asp-action="Index" class="btn btn-glass">
                    <i class="bi bi-grid-fill me-2"></i> Mi Biblioteca
                </a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login" class="btn btn-hero">Iniciar sesión</a>
                <a asp-controller="Auth" asp-action="Register" class="btn btn-glass">Crear cuenta</a>
            }
        </div>
    </div>

    <div class="section-title">
        <div style="width: 4px; height: 24px; background: var(--primary); border-radius: 10px;"></div>
        Características principales
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon"><i class="bi bi-shield-lock"></i></div>
                <h5 class="fw-bold">Seguridad Total</h5>
                <p class="text-muted small">Cifrado de extremo a extremo para que tus documentos solo sean visibles por ti.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon"><i class="bi bi-lightning-charge-fill"></i></div>
                <h5 class="fw-bold">Procesado Veloz</h5>
                <p class="text-muted small">Visualización optimizada y cargas instantáneas sin tiempos de espera.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon"><i class="bi bi-hdd-network"></i></div>
                <h5 class="fw-bold">Acceso Remoto</h5>
                <p class="text-muted small">Tus archivos disponibles en cualquier dispositivo, sincronizados en la nube.</p>
            </div>
        </div>
    </div>


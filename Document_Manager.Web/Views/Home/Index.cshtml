@{
    ViewData["Title"] = "Dashboard";
}

<style>
    :root {
        --primary: #1C5DBA;
        --gradient: linear-gradient(135deg, #1C5DBA, #1C5DBA);
        --glass: rgba(255, 255, 255, 0.75);
        --border: rgba(255, 255, 255, 0.4);
        --shadow: 0 20px 50px rgba(0,0,0,.12);
    }

    body {
        background: radial-gradient(circle at top, #eef1ff, #f9fafc);
    }

    /* HERO */
    .hero {
        background: var(--gradient);
        border-radius: 26px;
        padding: 60px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow);
    }

        .hero::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top left, rgba(255,255,255,.25), transparent);
        }

        .hero * {
            position: relative;
            z-index: 1;
        }

        .hero h1 {
            font-weight: 800;
            font-size: 2.4rem;
        }

        .hero p {
            font-size: 1.05rem;
            opacity: .95;
            max-width: 520px;
        }

    .btn-hero {
        background: white;
        color: var(--primary);
        border-radius: 14px;
        padding: 14px 26px;
        font-weight: 700;
        transition: .3s;
    }

        .btn-hero:hover {
            transform: translateY(-3px);
            background: #f3f4ff;
        }

    /* STATS */
    .stat-card {
        background: var(--glass);
        backdrop-filter: blur(16px);
        border: 1px solid var(--border);
        border-radius: 18px;
        padding: 26px;
        box-shadow: var(--shadow);
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--primary);
    }

    /* FEATURES */
    .feature-card {
        border-radius: 18px;
        padding: 30px;
        background: white;
        box-shadow: var(--shadow);
        transition: transform .25s;
        height: 100%;
    }

        .feature-card:hover {
            transform: translateY(-8px);
        }

    .feature-icon {
        font-size: 1.8rem;
        background: #f2f3ff;
        color: var(--primary);
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 18px;
    }
</style>

<div class="container my-4">

    <!-- HERO -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="hero mb-5">
            <h1>Document Manager</h1>
            <p class="mt-3">
                Gestiona tus documentos PDF de forma segura, rápida
                y organizada desde un solo lugar.
            </p>


            <div class="d-flex gap-3 mt-4 flex-wrap">
                <a asp-controller="Documents"
                asp-action="Upload"
                asp-action="Upload"
                class="btn btn-hero">
                    Subir documento
                </a>

                <a asp-controller="Documents"
                asp-action="Index"
                class="btn btn-outline-light rounded-3 px-4 text-center">
                    Ver documentos
                </a>
            </div>
        </div>
    }
    else
    {

        <div class="hero mb-5">
            <h1>Document Manager</h1>
            <p class="mt-3">
                Gestiona tus documentos PDF de forma segura, rápida
                y organizada desde un solo lugar.
            </p>

        <div class="d-flex gap-3 mt-4 flex-wrap">
            <a asp-controller="Auth"
            asp-action="Login"
            class="btn btn-hero">
                Subir documento
            </a>

            <a asp-controller="Auth"
            asp-action="Login"
            class="btn btn-outline-light rounded-3 px-4 text-center">
                Ver documentos
            </a>
        </div>
</div> 
    
    }

    <!-- STATS -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-value">12</div>
                <div class="text-muted">Documentos subidos</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-value">3</div>
                <div class="text-muted">Últimos esta semana</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-value">100%</div>
                <div class="text-muted">Privados</div>
            </div>
        </div>
    </div>

    <!-- FEATURES -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">🔐</div>
                <h5 class="fw-bold">Seguro</h5>
                <p class="text-muted">
                    Acceso exclusivo por usuario con control total
                    sobre tus documentos.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h5 class="fw-bold">Rápido</h5>
                <p class="text-muted">
                    Subidas instantáneas y acceso inmediato a
                    tus PDFs.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">📂</div>
                <h5 class="fw-bold">Organizado</h5>
                <p class="text-muted">
                    Todos tus documentos bien clasificados
                    y disponibles cuando los necesites.
                </p>
            </div>
        </div>
    </div>

</div>



@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --primary: #1D4ED8; /* Azul principal */
        --primary-dark: #1E40AF; /* Azul más oscuro */
        --accent: #2563EB; /* Azul brillante */
        --bg: #f4f8ff; /* Fondo azulado suave */
        --glass: rgba(255,255,255,0.70);
        --border: rgba(255,255,255,0.35);
        --shadow-soft: 0 15px 40px rgba(0,0,0,0.08);
        --shadow-hover: 0 25px 60px rgba(29,78,216,0.25);
    }

    body {
        background: radial-gradient(circle at top, #eaf2ff, var(--bg));
    }

    .fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* HERO */
    .hero {
        background: linear-gradient(135deg, var(--primary), var(--accent));
        border-radius: 32px;
        padding: 80px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-soft);
    }

        .hero::before {
            content: "";
            position: absolute;
            width: 600px;
            height: 600px;
            background: rgba(255,255,255,0.08);
            border-radius: 50%;
            top: -200px;
            right: -200px;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: 800;
            letter-spacing: -1px;
        }

        .hero p {
            font-size: 1.15rem;
            opacity: .95;
            max-width: 550px;
        }

    .btn-hero {
        background: white;
        color: var(--primary);
        border-radius: 14px;
        padding: 15px 30px;
        font-weight: 600;
        transition: all .3s ease;
        box-shadow: 0 10px 25px rgba(0,0,0,.15);
    }

        .btn-hero:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
            background: #f1f5ff;
        }

    .btn-glass {
        border: 2px solid rgba(255,255,255,0.7);
        backdrop-filter: blur(6px);
        border-radius: 14px;
        padding: 15px 30px;
        color: white;
        transition: .3s;
    }

        .btn-glass:hover {
            background: rgba(255,255,255,0.15);
        }

    /* STATS */
    .stat-card {
        background: var(--glass);
        backdrop-filter: blur(18px);
        border: 1px solid var(--border);
        border-radius: 24px;
        padding: 35px;
        box-shadow: var(--shadow-soft);
        transition: .3s;
        height: 100%;
    }

        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-hover);
        }

    .stat-icon {
        font-size: 1.8rem;
        margin-bottom: 12px;
        color: var(--accent);
    }

    .stat-value {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--primary-dark);
    }

    /* FEATURES */
    .feature-card {
        border-radius: 26px;
        padding: 40px;
        background: white;
        box-shadow: var(--shadow-soft);
        transition: all .3s ease;
        height: 100%;
    }

        .feature-card:hover {
            transform: translateY(-12px);
            box-shadow: var(--shadow-hover);
        }

    .feature-icon {
        font-size: 2rem;
        background: linear-gradient(135deg, #eaf2ff, #ffffff);
        color: var(--primary);
        width: 70px;
        height: 70px;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 25px;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
    }

    .section-title {
        font-weight: 700;
        font-size: 1.6rem;
        margin-bottom: 30px;
        color: #1f2937;
    }
</style>

<div class="container my-5 fade-in">

    <!-- HERO -->
    <div class="hero mb-5">
        <h1>Document Manager</h1>
        <p class="mt-3">
            Gestiona tus documentos PDF de forma segura, rápida y organizada
            desde un solo lugar con una experiencia moderna y profesional.
        </p>

        <div class="d-flex gap-3 mt-4 flex-wrap">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Documents"
                   asp-action="Upload"
                   class="btn btn-hero">
                    <i class="bi bi-upload me-2"></i> Subir documento
                </a>

                <a asp-controller="Documents"
                   asp-action="Index"
                   class="btn btn-glass">
                    <i class="bi bi-folder2-open me-2"></i> Ver documentos
                </a>
            }
            else
            {
                <a asp-controller="Auth"
                   asp-action="Login"
                   class="btn btn-hero">
                    Iniciar sesión
                </a>

                <a asp-controller="Auth"
                   asp-action="Register"
                   class="btn btn-glass">
                    Crear cuenta
                </a>
            }
        </div>
    </div>

    <!-- STATS -->
    @* <div class="section-title">Resumen General</div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stat-card text-center">
                <div class="stat-icon"><i class="bi bi-file-earmark-pdf"></i></div>
                <div class="stat-value">12</div>
                <div class="text-muted">Documentos subidos</div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card text-center">
                <div class="stat-icon"><i class="bi bi-clock-history"></i></div>
                <div class="stat-value">3</div>
                <div class="text-muted">Agregados esta semana</div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card text-center">
                <div class="stat-icon"><i class="bi bi-shield-lock"></i></div>
                <div class="stat-value">100%</div>
                <div class="text-muted">Privados y seguros</div>
            </div>
        </div>
    </div> *@

    <!-- FEATURES -->
    <div class="section-title">Características principales</div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h5 class="fw-bold">Seguridad avanzada</h5>
                <p class="text-muted">
                    Autenticación por usuario y protección completa
                    para garantizar privacidad total.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-lightning-charge"></i>
                </div>
                <h5 class="fw-bold">Rendimiento rápido</h5>
                <p class="text-muted">
                    Subida y visualización instantánea de archivos PDF
                    optimizada para alto rendimiento.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-folder2-open"></i>
                </div>
                <h5 class="fw-bold">Organización inteligente</h5>
                <p class="text-muted">
                    Administra y clasifica tus documentos fácilmente
                    para encontrarlos cuando los necesites.
                </p>
            </div>
        </div>
    </div>

</div>



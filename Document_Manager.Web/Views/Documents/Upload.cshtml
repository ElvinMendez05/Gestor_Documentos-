@model List<Document_Manager.Application.DTOs.DocumentDto>

@{
    ViewData["Title"] = "Mis Documentos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --soft-shadow: 0 20px 45px rgba(0,0,0,.08);
    }

    body {
        background: #f4f6fb;
    }

    .documents-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 35px;
        gap: 20px;
    }

    .search-box {
        position: relative;
        max-width: 420px;
        width: 100%;
    }

        .search-box i {
            position: absolute;
            top: 50%;
            left: 14px;
            transform: translateY(-50%);
            color: #9ca3af;
        }

        .search-box input {
            width: 100%;
            padding: 12px 18px 12px 42px;
            border-radius: 14px;
            border: 2px solid #e5e7eb;
        }

    .btn-new {
        background: var(--primary-gradient);
        color: white;
        border-radius: 14px;
        padding: 12px 22px;
        font-weight: 600;
        border: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .document-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px,1fr));
        gap: 1.5rem;
    }

    .card-document {
        background: white;
        border-radius: 22px;
        box-shadow: var(--soft-shadow);
        overflow: hidden;
        transition: .3s;
    }

        .card-document:hover {
            transform: translateY(-6px);
        }

    .preview-container {
        height: 200px;
        background: #eef1ff;
    }

        .preview-container iframe {
            width: 100%;
            height: 100%;
            border: none;
            pointer-events: none;
        }

    .doc-info {
        padding: 1.25rem;
    }

    /* MODAL */
    .card-modern {
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(14px);
        border-radius: 26px;
        box-shadow: var(--soft-shadow);
    }

    .dropzone-area {
        border: 2px dashed #d6dbea;
        border-radius: 22px;
        padding: 70px 40px;
        background: linear-gradient(180deg,#fbfcff,#f6f8ff);
        cursor: pointer;
        text-align: center;
        transition: .3s;
    }

        .dropzone-area.file-selected {
            border-color: #2ecc71;
            background: #f0fff4;
        }

    .upload-icon-wrapper {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.2rem;
        color: #667eea;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
    }

    .btn-gradient {
        background: var(--primary-gradient);
        color: white;
        border-radius: 14px;
        padding: 16px;
        border: none;
        font-weight: 600;
    }
</style>

<div class="container mt-4">

    <div class="documents-header">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" placeholder="Buscar documentos...">
        </div>

        <button class="btn-new" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="bi bi-plus-lg"></i> Nuevo
        </button>
    </div>

    <div class="document-grid">
        @foreach (var doc in Model)
        {
            <div class="card-document">
                <div class="preview-container">
                    <iframe src="@($"{doc.FilePath}#page=1&toolbar=0")"></iframe>
                </div>
                <div class="doc-info">
                    <strong>@doc.FileName</strong><br />
                    <small class="text-muted">@doc.CreatedAt.ToString("dd MMM yyyy")</small>
                </div>
            </div>
        }
    </div>
</div>


<!-- MODAL UPLOAD -->
<div class="modal fade" id="uploadModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 bg-transparent">

            <div class="card-modern p-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="fw-bold mb-0">Subir Documento</h4>
                        <small class="text-muted">Solo PDF · Máx 10MB</small>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <form asp-action="Upload" method="post" enctype="multipart/form-data">

                    <label class="dropzone-area mb-4" id="dropzone">
                        <input type="file" name="File" id="fileInput" hidden accept="application/pdf" />

                        <div class="upload-icon-wrapper">
                            <i class="bi bi-cloud-arrow-up-fill" id="mainIcon"></i>
                        </div>

                        <h5 id="uploadText">Arrastra o haz clic</h5>

                        <div id="file-name-display" class="text-success fw-semibold d-none mt-3">
                            <i class="bi bi-check-circle-fill"></i>
                            <span id="file-name"></span>
                        </div>
                    </label>

                    <button type="submit" class="btn btn-gradient w-100">
                        <i class="bi bi-upload me-2"></i> Subir Documento
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const fileInput = document.getElementById('fileInput');
        const fileNameDisplay = document.getElementById('file-name-display');
        const fileNameSpan = document.getElementById('file-name');
        const uploadText = document.getElementById('uploadText');
        const dropzone = document.getElementById('dropzone');
        const mainIcon = document.getElementById('mainIcon');

        fileInput.addEventListener('change', () => {
            if (fileInput.files.length > 0) {
                fileNameSpan.textContent = fileInput.files[0].name;
                fileNameDisplay.classList.remove('d-none');
                uploadText.style.display = 'none';
                dropzone.classList.add('file-selected');
                mainIcon.className = 'bi bi-file-earmark-check-fill';
            }
        });
    </script>
}



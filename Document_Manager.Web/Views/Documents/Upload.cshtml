@model Document_Manager.Web.Models.UploadDocumentViewModel

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --soft-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    .upload-container {
        max-width: 600px;
        margin: 40px auto;
        animation: fadeInUp 0.6s ease-out;
    }

    /* Animación de entrada */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card-modern {
        background: #ffffff;
        border: none;
        border-radius: 24px;
        box-shadow: var(--soft-shadow);
        overflow: hidden;
    }

    /* Área de Dropzone */
    .dropzone-area {
        position: relative;
        border: 2px dashed #e0e6ed;
        border-radius: 20px;
        /* Dropzone más ancho visualmente */
            width: 100%;
            padding: 70px 40px; /* más aire horizontal */
        /* Reducir padding lateral solo para el área del upload */
        background-color: #f8faff;
        text-align: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        display: block;
    }

    .card-modern .dropzone-area {
        margin-left: -10px;
        margin-right: -10px;
    }

        .dropzone-area:hover {
            border-color: #764ba2;
            background-color: #f1f4ff;
            transform: translateY(-2px);
        }

        .dropzone-area.file-selected {
            border-style: solid;
            border-color: #2ecc71;
            background-color: #f0fff4;
        }

    .upload-icon-wrapper {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        box-shadow: 0 8px 15px rgba(0,0,0,0.05);
        color: #667eea;
        font-size: 2.2rem;
        transition: 0.3s;
    }

    .dropzone-area:hover .upload-icon-wrapper {
        background: var(--primary-gradient);
        color: white;
        transform: scale(1.1);
    }

    /* Botón Brillante */
    .btn-gradient {
        background: var(--primary-gradient);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 16px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.6);
            color: white;
            filter: brightness(1.1);
        }

    /* Feedback de archivo seleccionado */
    #file-name-display {
        display: none;
        margin-top: 10px;
        color: #2ecc71;
        font-weight: 600;
        font-size: 0.9rem;
    }
</style>

<div class="container upload-container">

    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-muted small fw-bold">
            <i class="bi bi-chevron-left"></i> VOLVER AL LISTADO
        </a>
    </div>

    <div class="card-modern p-4 p-md-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold" style="color: #2d3748;">Subir Documento</h2>
            <p class="text-secondary">Digitaliza tus archivos en segundos</p>
        </div>

        <form asp-action="Upload" method="post" enctype="multipart/form-data">

            <label class="dropzone-area mb-2" id="dropzone">
                <input type="file" asp-for="File" id="fileInput" hidden accept="application/pdf" />

                <div class="upload-icon-wrapper">
                    <i class="bi bi-cloud-plus" id="mainIcon"></i>
                </div>

                <h5 class="fw-bold mb-1" id="uploadText">Arrastra o selecciona un PDF</h5>
                <p class="text-muted small mb-0">Formato permitido: PDF (Máx. 10MB)</p>

                <div id="file-name-display">
                    <i class="bi bi-check-circle-fill"></i> <span id="file-name"></span>
                </div>
            </label>

            <div class="text-center mb-4">
                <span asp-validation-for="File" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-gradient w-100" onclick="alertModernClick()">
                <i class="bi bi-rocket-takeoff me-2"></i> Comenzar Subida
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        
   @*  Input funtion  *@
    <script> const fileInput = document.getElementById('fileInput');
        const fileNameDisplay = document.getElementById('file-name-display');
        const fileNameSpan = document.getElementById('file-name');
        const uploadText = document.getElementById('uploadText');
        const dropzone = document.getElementById('dropzone');
        const mainIcon = document.getElementById('mainIcon');

        fileInput.addEventListener('change', function() {
            if (this.files && this.files.length > 0) {
                const name = this.files[0].name;
                fileNameSpan.textContent = name;

                // Cambios visuales de "Éxito"
                fileNameDisplay.style.display = 'block';
                uploadText.style.display = 'none';
                dropzone.classList.add('file-selected');
                mainIcon.className = 'bi bi-file-earmark-check-fill';
            }
        });

            const alertModernClick = () => {
            Swal.fire({
                title:'Archivo subido correctamente!',
                text: 'Has presionado el boton',
                icon: 'success'
            });
        }
    </script>

}


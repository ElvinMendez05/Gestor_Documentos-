@model List<Document_Manager.Application.DTOs.DocumentDto>

@{
    ViewData["Title"] = "Mis Documentos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --accent-color: #6366f1;
        --delete-color: #ef4444;
        --card-bg: #ffffff;
    }

    .document-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .card-document {
        border: none;
        border-radius: 20px;
        background: var(--card-bg);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

        .card-document:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        }

    .preview-container {
        height: 200px;
        background: #f1f5f9;
        position: relative;
    }

        .preview-container iframe {
            width: 100%;
            height: 100%;
            border: none;
            pointer-events: none;
        }

    .file-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: rgba(255,255,255,.9);
        padding: 4px 10px;
        border-radius: 8px;
        font-size: .75rem;
        font-weight: 700;
        color: var(--accent-color);
    }

    .doc-info {
        padding: 1.25rem;
    }

    .doc-title {
        font-weight: 700;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .action-area {
        padding: 0 1.25rem 1.25rem;
        display: flex;
        gap: 10px;
    }

    .btn-view {
        background: var(--accent-color);
        color: white;
        border-radius: 10px;
        flex-grow: 1;
        border: none;
    }

    .btn-delete-icon {
        width: 42px;
        height: 42px;
        border-radius: 10px;
        background: #fee2e2;
        color: var(--delete-color);
        border: none;
    }

    /* Modal PDF */
    .pdf-modal iframe {
        width: 100%;
        height: 75vh;
        border: none;
    }
</style>

<div class="container mt-4">

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Upload" class="btn btn-view px-4">
            <i class="bi bi-plus-lg"></i> Nuevo
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4">
            <i class="bi bi-folder2-open display-1 text-muted"></i>
            <h4 class="mt-3">Sin documentos</h4>
        </div>
    }
    else
    {
        <div class="document-grid">
            @foreach (var doc in Model)
            {
                <div class="card-document">
                    <div class="preview-container">
                        <span class="file-badge">PDF</span>
                        <iframe src="@($"{doc.FilePath}#page=1&toolbar=0")"></iframe>
                    </div>

                    <div class="doc-info">
                        <div class="doc-title" title="@doc.FileName">@doc.FileName</div>
                        <small class="text-muted">
                            <i class="bi bi-calendar3"></i>
                            @doc.CreatedAt.ToString("dd MMM yyyy")
                        </small>
                    </div>

                    <div class="action-area">
                        <!-- BOTÓN VER PDF -->
                        <button class="btn btn-view"
                                data-bs-toggle="modal"
                                data-bs-target="#pdfModal"
                                data-pdf="@doc.FilePath">
                            <i class="bi bi-eye"></i>
                        </button>

                        <form asp-action="Delete" asp-route-id="@doc.Id" method="post"
                              onsubmit="return confirm('¿Eliminar documento?');">
                            <button type="submit" class="btn btn-delete-icon">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- MODAL PREVIEW PDF -->
<div class="modal fade pdf-modal" id="pdfModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-file-earmark-pdf"></i> Vista previa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <iframe id="pdfViewer"></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const pdfModal = document.getElementById('pdfModal');
        const pdfViewer = document.getElementById('pdfViewer');

        pdfModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const pdfUrl = button.getAttribute('data-pdf');
            pdfViewer.src = pdfUrl;
        });

        pdfModal.addEventListener('hidden.bs.modal', function () {
            pdfViewer.src = '';
        });
    </script>
}


